<mah:MetroWindow x:Class="ULTRAKILL_Save_Editor.SaveSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ULTRAKILL_Save_Editor"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Select a save" Height="108" Width="602" Topmost="True" WindowStartupLocation="CenterScreen" Closed="MetroWindow_Closed">
    <Grid>
        <Label Content="Please select a save folder. Saves are located in &quot;ULTRAKILL\Saves&quot;. Select any slot you wish to edit." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Button Content="SELECT" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="313" Click="Button_Click"/>

    </Grid>
</mah:MetroWindow>
